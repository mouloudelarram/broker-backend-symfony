{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="contentPage-headerShow">
        <div class="contentPage-headerShow-left">
            <legend class="text-uppercase font-size-sm font-weight-bold" style="color: #2196f3;">
            <a href="/user/{{ role }}/"><i class="icon-enter5"></i></a>
                &nbsp; &nbsp; &nbsp;  
                {% if  role == "ROLE_ADMIN" %} admins
                {% elseif  role == "ROLE_TENANT" %} tenants
                {% elseif  role == "ROLE_USER" %} All Users
                {% endif %}
            </legend>
        </div>
        <div class="contentPage-headerShow-right">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="icon-pencil"></i></a>
            {# {{ include('customer/_delete_form.html.twig') }}    #}
            {{ include('user/_delete_form.html.twig') }} 
        </div>
    </div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr> #}
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Profile Path</th>
                <td>{{ user.profile }}</td>
            </tr>
            <tr>
                <th>Profile</th>
                <td><img src="{{ asset('uploads/' ~ user.profile) }}" class="profilImage"/></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    
{% endblock %}
