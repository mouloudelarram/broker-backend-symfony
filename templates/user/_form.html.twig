{{ form_start(form) }}{# 
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
 #}

    <div class="col" style="display: grid; width: 50vw; color: #02b3e4; padding: 10px;">
        {{ form_errors(form) }}
    </div>

    <fieldset class="mb-3">
        <legend class="text-uppercase font-size-sm font-weight-bold" style="color: #2196f3;">
        <a href="/user/{{ role }}/"><i class="icon-enter5"></i></a>
            &nbsp; &nbsp; &nbsp;  
            {% if  role == "ROLE_ADMIN" %} admins
            {% elseif  role == "ROLE_TENANT" %} tenants
            {% elseif  role == "ROLE_USER" %} All Users
            {% endif %}
        </legend>

        <div class="form-group row">
            <label class="col-form-label col-lg-2">Full name</label>
            <div class="col-lg-10">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.firstname, { 'attr': {'type': 'text', 'class': 'form-control form-control-lg', 'placeholder': "first name"} }) }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.lastname, { 'attr': {'type': 'text', 'class': 'form-control form-control-lg', 'placeholder': "last name"} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-form-label-lg col-lg-2">Email</label>
            <div class="col-lg-10">
                {{ form_widget(form.email, { 'attr': {'type': 'email', 'class': 'form-control form-control-lg', 'placeholder': "Your Email Address"} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-form-label-lg col-lg-2">Username</label>
            <div class="col-lg-10">
                {{ form_widget(form.username, { 'attr': {'type': 'text', 'class': 'form-control form-control-lg', 'placeholder': "Your Username"} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2">Phone</label>
            <div class="col-lg-10">
                {{ form_widget(form.phone, { 'attr': {'type': 'number', 'class': 'form-control form-control-lg', 'placeholder': "Your Phone Number"} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-form-label-sm col-lg-2">Password</label>
            <div class="col-lg-10">
                {{ form_widget(form.plainPassword, { 'attr': {'type': 'text', 'class': 'form-control form-control-lg', 'placeholder': "Your Password at least 4 characters"} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2"> {{ form_label(form.Roles) }}</label>
            <div class="col-lg-10">
                {{ form_widget(form.Roles, {'attr': {'class' : 'selectField'} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2"> {{ form_label(form.profile) }}</label>
            <div class="col-lg-10">
                {{ form_widget(form.profile, {'attr': {'class' : 'selectField'} }) }}
            </div>
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }} <i class="icon-paperplane ml-2"></i></button>
        </div>
    </fieldset>

{{ form_end(form) }}
